<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaseActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:maxLength="11" />

    <LinearLayout
        android:id="@+id/phoneToastLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_toast_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/phone_toast_height"
            android:background="@drawable/login_phone_number_toast_bg"
            android:gravity="center"
            android:textColor="#77adf3"
            android:visibility="gone"
            android:textSize="@dimen/phone_toast_text_size"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="登录" />


</LinearLayout>
